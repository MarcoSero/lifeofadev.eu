
<div id="admin">
<h1>Super Secret Administration Panel</h1>

It's <%= Time.now.strftime("%d %B %Y") %>

<%= button_to 'New post', 'posts/new', :method => :get  %>

<h2>Posts</h2>
<table id="posts">
  <tr>
    <th id="title">Title</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th>Creator</th>
  </tr>

  <% @posts.each do |post| %>
  <tr>
    <td> <%= post.title %> </td>
    <td> <%= post.created_at.strftime("%d %b %Y") %> </td>
    <td> <%= post.updated_at.strftime("%d %b %Y") %> </td>
    <td> <%= User.find_by_id(post.user_id).username %> </td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>
</div>