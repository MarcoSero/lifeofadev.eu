<% content_for :title, @category %>

<h1>Category: <em><%= @category %></em></h1>

<% if flash[:notice] %>
  <div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= raw flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= raw flash[:alert] %>
  </div>
<% end %>

  
<%= render @posts %>