<% if @user.errors.any? %>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= simple_form_for @user, :html => { :class => "form-horizontal"} do |f| %>
  <%= f.input :username, :placeholder => 'username', :required => false %>
  <%= f.input :email, :placeholder => 'E-mail' %>
  <%= f.input :first_name, :placeholder => 'First name' %>
  <%= f.input :second_name, :placeholder => 'Second name' %>
  <%= f.input :password, :placeholder => 'password' %>
  <%= f.input :password_confirmation, :placeholder => 'password' %>
  <%= f.input :bio_md, :placeholder => 'Your biography in *markdown* sintax', :label => 'Biography' %>
  <div class="button-submit-centered">
    <%= f.button :submit, :class => "button primary" %>
  </div>
<% end %>